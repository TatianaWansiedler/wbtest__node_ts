{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "es2017",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "cronjob/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "docs",
    "dist"
  ]
}